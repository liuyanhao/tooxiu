<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ImageTypeMapper">
	
	<resultMap type="ImageType" id="imagetypeResultMap">
		<id column="IMAGETYPE_ID" property="IMAGETYPE_ID"/>
		<result column="NAME" property="NAME"/>
		<result column="PARENT_ID" property="PARENT_ID"/>
	</resultMap>
	
	<!--表名 -->
	<sql id="tableName">
		TB_IMAGETYPE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		TYPE_NAME,	
		TYPE_CODE,	
		ORDER_BY,	
		BZ,	
		IAMGE_PATH,	
		IMAGETYPE_ID,
		PARENT_ID,
		NAME
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TYPE_NAME},	
		#{TYPE_CODE},	
		#{ORDER_BY},	
		#{BZ},	
		#{IAMGE_PATH},	
		#{IMAGETYPE_ID},
		#{PARENT_ID},
		#{NAME}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			IMAGETYPE_ID = #{IMAGETYPE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TYPE_NAME = #{TYPE_NAME},
			TYPE_CODE = #{TYPE_CODE},
			ORDER_BY = #{ORDER_BY},
			BZ = #{BZ},
			IAMGE_PATH = #{IAMGE_PATH},
		NAME = #{NAME},
		IMAGETYPE_ID = IMAGETYPE_ID
		where 
		IMAGETYPE_ID = #{IMAGETYPE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			IMAGETYPE_ID = #{IMAGETYPE_ID}
	</select>

	<!-- 通过ID获取数据 -->
	<select id="findTypeNameById" parameterType="String" resultType="String">
		select
		TYPE_NAME
		from
		<include refid="tableName"></include>
		where
		IMAGETYPE_ID = #{imagetypeId}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.IMAGETYPE_ID!= null and pd.IMAGETYPE_ID != ''"><!-- 检索 -->
		and PARENT_ID = #{pd.IMAGETYPE_ID}
		</if>
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
	</select>
	
	<!-- 通过ID获取其子级列表 -->
	<select id="listByParentId" parameterType="String" resultMap="imagetypeResultMap">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			PARENT_ID = #{parentId} order by NAME 
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
	</select>
	
	
	<!-- lxc  qq 1094921525 -->
</mapper>